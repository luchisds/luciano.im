{{#if image}}
    <img class="post-featured-image" src="{{image}}">
{{/if}}

<article class="post-container">
    <header class="main-post-header">
        <h1 class="main-post-title" itemprop="name headline">{{title}}</h1>

        <p class="post-date">Published <time datetime="{{published_at}}" itemprop="datePublished">{{date format="MMMM DD YYYY"}}</time> <strong itemprop="author" itemscope="" itemtype="http://schema.org/Person">by {{author}}</strong></p>
        <nav class="social">
            <a class="twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-twitter"></i> Twitter
            </a>
            <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-facebook"></i> Facebook
            </a>
            <a class="google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-google-plus"></i> Google+
            </a>
        </nav>
    </header>

    <div class="post-content" itemprop="articleBody">
        {{{content}}}
    </div>
    
    <aside class="next_post">
        {{#next_post}}
        <a class="read-next" href="{{url}}">
            <h2><i class="fa fa-chevron-left"></i> {{title}}</h2>
        </a>
        {{/next_post}}
    </aside>
</article>