<div class="sidebar" role="aside" style="background-image: url({{@blog.cover}})" itemscope itemtype="http://schema.org/Organization">
    <header class="header">
        {{#if @blog.logo}}
        <a class="js-ajax-link" href="{{@blog.url}}" itemprop="url">
            <img id="blog" class="logo" src="{{@blog.logo}}" alt="{{@blog.title}}" itemprop="logo">
        </a>
        {{else}}
        <h1 class="white title">
            <a class="js-ajax-link" href="{{@blog.url}}" itemprop="url">{{@blog.title}}</a>
        </h1>
        {{/if}}

        <div class="w_separator"></div>

        <p class="description" itemprop="description">{{@blog.description}}</p>
    </header>
</div>
