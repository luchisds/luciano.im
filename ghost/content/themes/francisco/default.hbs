<!DOCTYPE html>
<html>
	<head itemscope itemtype="http://schema.org/WebSite">
		{{! Document Settings }}
        <meta http-equiv="Content-Type" content="text/html" charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="robots" content="index, follow">
    
        {{! Page Meta }}
        {{#is "post, tag, author, page, paged"}}
        <title itemprop='name'>{{meta_title}}</title>
        {{else}}
        <title itemprop='name'>{{meta_title}} | {{meta_description}}</title>
        {{/is}}
        <meta name="description" content="{{meta_description}}">
        {{#if post}}
		<meta name="keywords" content="{{#each post.tags}}{{name}}{{/each}}">
		{{/if}}
    
        <meta name="HandheldFriendly" content="True">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
	
		{{! Styles'n'Scripts }}
		<link rel="stylesheet" href="{{asset "css/normalize.css"}}">
		<link rel="stylesheet" href="{{asset "css/nprogress.css"}}">
		<link rel="stylesheet" href="{{asset "css/main.css"}}">

		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

		{{! Ghost outputs important style and meta data with this tag }}
		{{ghost_head}}
	</head>
	
	<body class="{{body_class}}" itemscope itemtype="http://schema.org/Blog">
		
		{{#if @blog.cover}}
		    <button id="mm-menu-toggle" class="fw mm-menu-toggle">Toggle Menu</button>
		{{else}}
		    <button id="mm-menu-toggle" class="mm-menu-toggle">Toggle Menu</button>
		{{/if}}
		
		{{navigation}}
		
		<div id="wrapper" class="wrapper">
			{{> sidebar }}
		
			<div id="ajax-container" class="content">
				{{{body}}}
			</div>
		</div>
	
		{{ghost_foot}}
	
		{{! The main JavaScript file for Francisco }}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<script src="{{asset "js/jquery.fitvids.js"}}"></script>
		<script src="{{asset "js/materialMenu.js"}}"></script>
		<script src="{{asset "js/nprogress.js"}}"></script>
		<script src="{{asset "js/jquery.history.js"}}"></script>
		<script src="{{asset "js/index.js"}}"></script>
		
	</body>
</html>
