html, body
  color #868686
  font normal 16px 'Open Sans', sans-serif
  height 100%
  margin 0
  padding 0
  position relative
  width 100%
  +below(450px)
    font normal 14px 'Open Sans', sans-serif

footer
  background-color white
  color black
  font-size .7em
  padding 1em 0 .5em 0
  text-align center

header
  height 50px
  +below(635px)
    height 90px
  &.fixed
    & + section
      margin-top 50px
      +below(635px)
        margin-top 90px

section
  background-color white
  position relative
  &:not(#home):not(#about):not(#map-contact):not(#contact)
    padding 3.5% 2%
  &:not(#about)
    .title
      margin-bottom 0

label
  display block
  line-height 1em

li
  display inline-block
  list-style none

nav
  display inline-block
  text-align center
  margin-left 3%
  height 50px
  vertical-align top
  +below(785px)
      float right
  +below(635px)
    margin 0
    width 100%
  ul
    color white
    font-size .9em
    position relative
    top 50%
    transform translateY(-50%) !important
  li
    margin 0 .9em
    +below(635px)
      margin 0
      width 25%
    .underline
      display block
      height 2px
      margin 5px auto 0 auto
      width 20px
    &.active
      .underline
        background-color white
  a
    color white
    text-decoration none
    transition .3s all ease-in-out
    -webkit-transition .3s all ease-in-out
    &:hover
      color #555

ul
  margin 0
  padding 0

#about
  padding 5% 5% 3% 5% !important
  text-align center
  p
    font-size 1.1em
    line-height 1.9em
    margin 0
    +below(635px)
      font-size 1em

