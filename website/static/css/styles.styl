.row
  left 50%
  position absolute
  width 50%
  & > div
    padding 1.5% 5%

.serif-italic
  font-family 'PT Serif', serif
  font-style italic

.service
  border-top 1px solid #EE3D46
  box-sizing border-box
  display inline-block
  margin-top 2.8em
  vertical-align top
  padding 2% 2% 0 2%
  position relative
  text-align center
  width 33%
  +below(635px)
    display block
    width 100%
  img
    background-color white
    display block
    height auto
    left 0
    margin -22px auto 0 auto
    padding 0 5%
    position absolute
    right 0
    top 0
    max-width 44px
    +below(635px)
      height auto
      width 38px
      margin-top -19px
    +below(450px)
      height auto
      width 30px
      margin-top -15px
  p
    line-height 1.8em

.subtitle
  display block
  font-size .9em
  margin 1.2em 0 3.5em 0
  // +below(450px)
  //   margin .8em 0 2em 0

.title
  font-size 1.8em

.title-service
  font-weight normal

.title-underline
  display block
  height 6px
  margin 0 auto
  width 30px

.view-work
  border 1px solid white
  color white
  display inline-block
  margin-top 2.5em
  padding .6em 1em
  text-decoration none
  transition .3s all ease-in-out
  -webkit-transition .3s all ease-in-out
  &:hover
    background-color rgba(255,255,255,.7)
    border 1px solid #EE3D46
    color #EE3D46

.work
  color white
  display inline-block
  max-height 370px
  margin 0
  overflow hidden
  position relative
  /*+below(450px)
    width 100%*/
  em
    display block
    font-size 1.1em
    +below(1024)
      font-size 1em
  figcaption
    background-color rgba(238,61,70,.8)
    height 100%
    left 0
    max-height 370px
    opacity 0
    position absolute
    text-align center
    bottom 0
    transition .5s all ease
    -webkit-transition .5s all ease
    vertical-align middle
    width 100%
    +below(1024px)
      bottom 0
      height 55px
      opacity 1
      padding-left .5em
      text-align left
      .view-work
        display none
    &:before
      content ''
      display inline-block
      height 100%
      margin-right -0.25em
      vertical-align middle
  h4
    font-size 1.5em
    margin 0 0 .3em 0
    +below(1024px)
      margin -5px 0 0 0
    a
      color white
      text-decoration none
      +below(1024px)
        font-size .9em
        margin 0
  img
    height auto
    width 100%
  &:hover
    figcaption
      opacity 1

.work-data
  display inline-block
  vertical-align middle

